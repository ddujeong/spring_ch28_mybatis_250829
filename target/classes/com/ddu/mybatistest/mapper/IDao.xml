<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.ddu.mybatistest.dao.IDao" >
	<select id="boardListDao" resultType="com.ddu.mybatistest.dto.BoardDto" >
		SELECT * FROM boardtbl ORDER BY bnum DESC
	</select>
	<insert id="boardWriteDao" >
		INSERT INTO boardtbl(btitle, bname, bcontent, bhit) VALUES (#{param1},#{param2},#{param3},0)
		<!-- INSERT INTO boardtbl(btitle, bname, bcontent, bhit) VALUES (#{btitle},#{bcontent},#{bname},0) -->
	</insert>
	<select id="contentViewDao" resultType="com.ddu.mybatistest.dto.BoardDto">
		SELECT * FROM boardtbl WHERE bnum=#{bnum}
	</select>
	<update id="contentModifyDao">
		UPDATE boardtbl SET btitle=#{param2}, bname=#{param3} ,bcontent=#{param4} WHERE bnum=#{param1}
	</update>
	<delete id="contentDeleteDao">
		DELETE FROM boardtbl WHERE bnum=#{bnum}
	</delete>
	<select id="contentCountDao" resultType="int">
		SELECT COUNT(*) FROM boardtbl
	</select>
	<update id="upBhitDao">
		UPDATE boardtbl SET bhit=bhit+1 WHERE bnum=#{bnum}
	</update>
</mapper>